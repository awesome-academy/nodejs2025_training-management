doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Hệ thống Quản lý Đào tạo
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css")
    style.
      :root {
        --primary-color: #6c5ce7;
        --secondary-color: #a29bfe;
        --accent-color: #74b9ff;
        --text-color: #2d3436;
        --light-bg: #f5f6fa;
        --gradient-primary: linear-gradient(135deg, #6c5ce7, #a29bfe);
        --gradient-secondary: linear-gradient(135deg, #74b9ff, #0984e3);
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: var(--light-bg);
        color: var(--text-color);
      }

      .navbar {
        background: var(--gradient-primary);
        box-shadow: 0 2px 15px rgba(108, 92, 231, 0.2);
        padding: 1rem 2rem;
      }

      .navbar-brand {
        font-size: 1.5rem;
        font-weight: 600;
        color: white !important;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .nav-link {
        color: rgba(255,255,255,0.9) !important;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
      }

      .nav-link:hover {
        color: white !important;
        transform: translateY(-2px);
      }

      .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: white;
        transition: all 0.3s ease;
        transform: translateX(-50%);
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .dropdown-menu {
        border: none;
        box-shadow: 0 5px 15px rgba(108, 92, 231, 0.1);
        border-radius: 10px;
        overflow: hidden;
        animation: dropdownFade 0.3s ease;
      }

      @keyframes dropdownFade {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .dropdown-item {
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
      }

      .dropdown-item:hover {
        background: var(--accent-color);
        color: white;
        transform: translateX(5px);
      }

      .main-content {
        padding: 2rem;
        min-height: calc(100vh - 76px);
      }

      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(108, 92, 231, 0.05);
        transition: all 0.3s ease;
        overflow: hidden;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(108, 92, 231, 0.1);
      }

      .btn {
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .btn-primary {
        background: var(--gradient-primary);
        border: none;
      }

      .btn-primary:hover {
        background: var(--gradient-secondary);
        transform: translateY(-2px);
      }

      .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(108, 92, 231, 0.05);
      }

      .table thead th {
        background: var(--gradient-primary);
        color: white;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 500;
      }

      .stats-card {
        background: var(--gradient-primary);
        color: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
      }

      .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(108, 92, 231, 0.2);
      }

      .stats-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        opacity: 0.8;
      }

      .stats-number {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .stats-label {
        font-size: 1rem;
        opacity: 0.8;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
      }

      .loading-overlay.active {
        opacity: 1;
        visibility: visible;
      }

      .loading-spinner {
        width: 50px;
        height: 50px;
        border: 5px solid var(--light-bg);
        border-top-color: var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
      }

      .btn-outline-primary:hover {
        background: var(--gradient-primary);
        border-color: transparent;
      }

      .btn-outline-success {
        color: var(--accent-color);
        border-color: var(--accent-color);
      }

      .btn-outline-success:hover {
        background: var(--gradient-secondary);
        border-color: transparent;
      }

      .text-primary {
        color: var(--primary-color) !important;
      }

      .text-muted {
        color: var(--secondary-color) !important;
      }

  body
    .loading-overlay
      .loading-spinner

    nav.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        a.navbar-brand(href="views/supervisor")
          i.fas.fa-graduation-cap.me-2
          | Hệ thống Đào tạo
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/views/supervisor/courses")
                i.fas.fa-book.me-2
                | Khóa học
            li.nav-item
              a.nav-link(href="/views/supervisor/subjects")
                i.fas.fa-tasks.me-2
                | Môn học
            li.nav-item
              a.nav-link(href="/views/supervisor/trainee")
                i.fas.fa-user-graduate.me-2
                | Thành viên
          ul.navbar-nav
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", data-bs-toggle="dropdown")
                i.fas.fa-user-circle.me-2
                | Tài khoản
              ul.dropdown-menu.dropdown-menu-end
                li
                  a.dropdown-item(href="#" data-bs-toggle="modal" data-bs-target="#editProfileModal")
                    i.fas.fa-user-edit.me-2
                    | Chỉnh sửa hồ sơ
                li
                  a.dropdown-item(href="#" data-bs-toggle="modal" data-bs-target="#changePasswordModal")
                    i.fas.fa-key.me-2
                    | Đổi mật khẩu
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href="/views/supervisor/logout")
                    i.fas.fa-sign-out-alt.me-2
                    | Đăng xuất

    .main-content
      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js")
    script(src="/js/supervisor/layout.js" defer)

    // Modal đổi mật khẩu
    #changePasswordModal.modal.fade(tabindex="-1")
      .modal-dialog
        .modal-content
          .modal-header
            h5.modal-title.text-primary
              i.fas.fa-key.me-2
              | Đổi mật khẩu
            button.btn-close(type="button" data-bs-dismiss="modal")
          .modal-body
            form#changePasswordForm
              .mb-3
                label.form-label(for="oldPassword")
                  i.fas.fa-lock.me-2.text-muted
                  | Mật khẩu cũ
                input#oldPassword.form-control.form-control-lg(type="password" name="oldPassword" placeholder="Nhập mật khẩu cũ" required autocomplete="current-password")
              .mb-3
                label.form-label(for="newPassword")
                  i.fas.fa-lock-open.me-2.text-muted
                  | Mật khẩu mới
                input#newPassword.form-control.form-control-lg(type="password" name="newPassword" placeholder="Nhập mật khẩu mới" required autocomplete="new-password")
              .mb-3
                label.form-label(for="confirmPassword")
                  i.fas.fa-lock.me-2.text-muted
                  | Xác nhận mật khẩu mới
                input#confirmPassword.form-control.form-control-lg(type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu mới" required autocomplete="new-password")
              .mb-3.text-danger#changePasswordError
              button.btn.btn-primary.btn-lg.w-100.mt-2(type="submit")
                i.fas.fa-sync-alt.me-2
                | Đổi mật khẩu
    style.
      #changePasswordModal .modal-content {
        border-radius: 1.5rem;
      }
      #changePasswordModal .form-label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0.5rem;
      }
      #changePasswordModal .form-control-lg {
        border-radius: 1rem;
        font-size: 1.1rem;
        padding: 1rem 1.25rem;
        border: 1.5px solid #e9ecef;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        transition: border-color 0.2s, box-shadow 0.2s;
      }
      #changePasswordModal .form-control-lg:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.15rem rgba(13,110,253,.15);
        background: #f8f9fa;
      }
      #changePasswordModal .btn-lg {
        padding: 0.9rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 1rem;
        font-weight: 600;
        letter-spacing: 0.5px;
      }
      #changePasswordError {
        min-height: 24px;
        font-size: 1rem;
        margin-bottom: 0.5rem;
      }

    // Toast notification container
    .notification-container.position-fixed.top-0.end-0.p-3(style="z-index: 9999;")
      #changePasswordToast.toast(role="alert" aria-live="assertive" aria-atomic="true")
        .toast-header
          i.fas.fa-info-circle.me-2
          strong.me-auto Thông báo
          button.btn-close(type="button" data-bs-dismiss="toast" aria-label="Close")
        .toast-body#changePasswordToastBody

    style.
      #changePasswordModal .modal-content {
        border-radius: 1.5rem;
      }
      .notification-container {
        z-index: 9999;
      }
      .toast {
        background: white;
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border-radius: 15px;
        min-width: 320px;
        transform: translateX(100%);
        transition: transform 0.3s ease-in-out;
      }
      .toast.show {
        transform: translateX(0);
      }
      .toast-header {
        border-bottom: 2px solid #f8f9fa;
        border-radius: 15px 15px 0 0;
        padding: 1rem;
      }
      .toast-body {
        padding: 1rem;
        font-size: 0.95rem;
      }
      .toast.success .toast-header {
        background-color: #198754;
        color: white;
      }
      .toast.error .toast-header {
        background-color: #dc3545;
        color: white;
      }
      .toast.success .toast-body {
        border-left: 4px solid #198754;
      }
      .toast.error .toast-body {
        border-left: 4px solid #dc3545;
      }

    // Modal chỉnh sửa hồ sơ
    #editProfileModal.modal.fade(tabindex="-1")
      .modal-dialog
        .modal-content
          .modal-header
            h5.modal-title.text-primary
              i.fas.fa-user-edit.me-2
              | Chỉnh sửa hồ sơ
            button.btn-close(type="button" data-bs-dismiss="modal")
          .modal-body
            form#editProfileForm
              .mb-3
                label.form-label(for="profileName")
                  i.fas.fa-user.me-2.text-muted
                  | Họ tên
                input#profileName.form-control(type="text" name="name" placeholder="Nhập họ tên" required)
              .mb-3
                label.form-label(for="profileEmail")
                  i.fas.fa-envelope.me-2.text-muted
                  | Email
                input#profileEmail.form-control(type="email" name="email" placeholder="Nhập email" required)
              .mb-3.text-danger#editProfileError
              button.btn.btn-primary.btn-lg.w-100.mt-2(type="submit")
                i.fas.fa-save.me-2
                | Lưu thay đổi
