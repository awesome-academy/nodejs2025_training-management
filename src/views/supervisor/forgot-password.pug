extends ../trainee/layouts/auth-layout

block content
  .container.py-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg.border-0.rounded-4
          .card-body.p-4
            h3.text-center.mb-4.text-primary
              i.fas.fa-key.me-2
              | Đổi mật khẩu mới
            form#resetPasswordForm
              input(type="hidden" id="resetEmail" name="email")
              input(type="hidden" id="resetCode" name="code")
              .mb-3
                label.form-label(for="resetPassword")
                  i.fas.fa-lock-open.me-2.text-muted
                  | Mật khẩu mới
                input#resetPassword.form-control.form-control-lg(type="password" name="password" placeholder="Nhập mật khẩu mới" required autocomplete="new-password")
              .mb-3
                label.form-label(for="resetPasswordConfirm")
                  i.fas.fa-lock.me-2.text-muted
                  | Xác nhận mật khẩu mới
                input#resetPasswordConfirm.form-control.form-control-lg(type="password" name="passwordConfirm" placeholder="Nhập lại mật khẩu mới" required autocomplete="new-password")
              .mb-3.text-danger#resetPasswordError
              button.btn.btn-primary.btn-lg.w-100.mt-2(type="submit")
                i.fas.fa-sync-alt.me-2
                | Đổi mật khẩu
  style.
    .card {
      border-radius: 1.5rem;
    }
    .form-label {
      font-weight: 500;
      color: #2c3e50;
      margin-bottom: 0.5rem;
    }
    .form-control-lg {
      border-radius: 1rem;
      font-size: 1.1rem;
      padding: 1rem 1.25rem;
      border: 1.5px solid #e9ecef;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      transition: border-color 0.2s, box-shadow 0.2s;
    }
    .form-control-lg:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.15rem rgba(13,110,253,.15);
      background: #f8f9fa;
    }
    .btn-lg {
      padding: 0.9rem 1.5rem;
      font-size: 1.1rem;
      border-radius: 1rem;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    #resetPasswordError {
      min-height: 24px;
      font-size: 1rem;
      margin-bottom: 0.5rem;
    }
block scripts
  script(src="/js/supervisor/forgot-password.js" defer) 
